{% extends 'partials/base.html.twig' %}

{% block content %}
    <h1>Burgers avec {{ ingredientType }} "{{ ingredientName }}"</h1>

    {% if burgers is not empty %}
        <ul>
            {% for burger in burgers %}
                <li>
                    <strong>{{ burger.name }}</strong> - {{ burger.price }} €
                    <br>
                    {{ burger.description }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun burger ne contient cet ingrédient.</p>
    {% endif %}
{% endblock %}
